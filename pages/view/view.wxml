<!--pages/view/view.wxml-->
<view class="box">哈哈哈</view>
<view>嘿嘿嘿</view>
<!-- 1.点击状态保持时间 2.点击状态开始生效时间 -->
<view class="box1"
      hover-class="hover-box1"
      hover-stay-time="{{2000}}"
      hover-start-time="{{2000}}">box1</view>

<!-- 阻止点击事件冒泡 -->
<view class="box2" hover-class="hover-box2">
  <view class="box1"
        hover-class="hover-box1"
        hover-stay-time="{{0}}"
        hover-start-time="{{0}}"
        hover-stop-propagation>box1</view>
</view>
